@model EncoreTIX.ViewModels.AttractionDetailsViewModel
@{
    ViewData["Title"] = Model.Attraction.Name;
}

<div class="container py-3">
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Search
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <img src="@Model.Attraction.ImageUrl" alt="@Model.Attraction.Name" class="img-fluid rounded w-100">
        </div>
    </div>

    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="mb-0">@Model.Attraction.Name</h1>
        </div>
        <div class="col-auto d-flex gap-2">
            @if (Model.Attraction.ExternalLinks?.Twitter?.Count > 0)
            {
                <a href="@Model.Attraction.ExternalLinks.Twitter[0].Url" target="_blank" class="text-decoration-none">
                    <img src="~/images/twitter.svg" alt="Twitter" width="24" height="24">
                </a>
            }

            @if (Model.Attraction.ExternalLinks?.Youtube?.Count > 0)
            {
                <a href="@Model.Attraction.ExternalLinks.Youtube[0].Url" target="_blank" class="text-decoration-none">
                    <img src="~/images/youtube.svg" alt="YouTube" width="24" height="24">
                </a>
            }

            @if (Model.Attraction.ExternalLinks?.Facebook?.Count > 0)
            {
                <a href="@Model.Attraction.ExternalLinks.Facebook[0].Url" target="_blank" class="text-decoration-none">
                    <img src="~/images/spotify.svg" alt="Facebook" width="24" height="24">
                </a>
            }

            @if (Model.Attraction.ExternalLinks?.Homepage?.Count > 0)
            {
                <a href="@Model.Attraction.ExternalLinks.Homepage[0].Url" target="_blank" class="text-decoration-none">
                    <img src="~/images/website.svg" alt="Website" width="24" height="24">
                </a>
            }
        </div>
    </div>

    @if (Model.Events.Count == 0)
    {
        <div class="text-center my-5">
            <p class="text-muted">No upcoming events found.</p>
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var evt in Model.Events)
            {
                <div class="list-group-item p-0 mb-2">
                    <div class="d-flex align-items-center">
                        <div style="width: 99px; height: 105px; margin-right: 15px;">
                            <img src="@evt.ImageUrl" alt="@evt.Name"
                                 class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
                        </div>
                        <div style="width:65%">
                            <div class="text-muted small">@evt.FormattedDate</div>
                            <h5 class="mb-1">@evt.Name</h5>
                            <div>@evt.VenueName, @evt.VenueCity</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>